# This file contains all the default values for the "OLYMPUSCI_" environment
# variables used in the CI scripts. See ci/envs/README.md for more details on
# the behavior of these variables and their usage in the CI scripts.

# The path to the OLYMPUS git repository.
export OLYMPUSCI_OLYMPUS_GIT_DIR=$(pwd)

# Controls the version of Hermetic Python to use. Use system default if not
# set.
export OLYMPUSCI_HERMETIC_PYTHON_VERSION=${OLYMPUSCI_HERMETIC_PYTHON_VERSION:-$(python3 -V | awk '{print $2}' | awk -F. '{print $1"."$2}')}

# Controls the CUDA version to use when building the OLYMPUS artifacts or
# running the tests.
export OLYMPUSCI_CUDA_VERSION=${OLYMPUSCI_CUDA_VERSION:-12}

# Controls the ROCm version to use when building the OLYMPUS artifacts or
# running the tests.
export OLYMPUSCI_ROCM_VERSION=${OLYMPUSCI_ROCM_VERSION:-7}

# Set OLYMPUSCI_XLA_GIT_DIR to the root of the XLA git repository to use a local
# copy of XLA instead of the pinned version in the WORKSPACE.
export OLYMPUSCI_XLA_GIT_DIR=${OLYMPUSCI_XLA_GIT_DIR:-}

# If set to 1, the builds will clone the XLA repository at HEAD.
export OLYMPUSCI_CLONE_MAIN_XLA=${OLYMPUSCI_CLONE_MAIN_XLA:-0}

# Allows overriding the XLA commit that is used.
export OLYMPUSCI_XLA_COMMIT=${OLYMPUSCI_XLA_COMMIT:-}

# Controls the location where the artifacts are written to.
export OLYMPUSCI_OUTPUT_DIR="$(pwd)/dist"

# Whether to use RBE to build the artifacts.
export OLYMPUSCI_BUILD_ARTIFACT_WITH_RBE=${OLYMPUSCI_BUILD_ARTIFACT_WITH_RBE:-0}

# Whether to write new cache entries to the remote cache bucket.
export OLYMPUSCI_WRITE_TO_BAZEL_REMOTE_CACHE=${OLYMPUSCI_WRITE_TO_BAZEL_REMOTE_CACHE:-0}

# Controls the type of artifacts to build. Valid values are "default", "release", "nightly".
export OLYMPUSCI_ARTIFACT_TYPE=${OLYMPUSCI_ARTIFACT_TYPE:-"default"}

# Controls the version of the Release Candidate wheel to build during the
# release process.
export OLYMPUSCI_WHEEL_RC_VERSION=${OLYMPUSCI_WHEEL_RC_VERSION:-}

# #############################################################################
# Test script specific environment variables.
# #############################################################################
# Whether to use double-precision numbers in the tests.
export OLYMPUSCI_ENABLE_X64=${OLYMPUSCI_ENABLE_X64:-0}

# Sets the number of TPU cores for the TPU machine type.
export OLYMPUSCI_TPU_CORES=${OLYMPUSCI_TPU_CORES:-}

# OLYMPUSCI_PYTHON points to the Python binary on the system that should be used
# for installing the OLYMPUS wheels on the system and running Pytest scripts.
export OLYMPUSCI_PYTHON=${OLYMPUSCI_PYTHON:-python${OLYMPUSCI_HERMETIC_PYTHON_VERSION}}

# When set to 1, the full TPU test suite is run. Otherwise, a subset of tests
# is run.
export OLYMPUSCI_RUN_FULL_TPU_TEST_SUITE=${OLYMPUSCI_RUN_FULL_TPU_TEST_SUITE:-0}

# Controls which additional extras for OLYMPUS to install from PyPI.
export OLYMPUSCI_OLYMPUS_PYPI_EXTRAS=${OLYMPUSCI_OLYMPUS_PYPI_EXTRAS:-""}

# Controls the value of --//olympus:build_olympuslib.
# true: add individual olympuslib and CUDA plugin targets in the test dependencies.
# false: add pre-built olympuslib and CUDA plugin wheels in the test dependencies.
# wheel: add olympuslib and CUDA plugin py_import targets in the test dependencies.
export OLYMPUSCI_BUILD_OLYMPUSLIB=${OLYMPUSCI_BUILD_OLYMPUSLIB:-true}

# Controls the value of --//olympus:build_olympus flag.
# true: add individual olympus targets in the test dependencies.
# false: add pre-built olympus wheel in the test dependencies.
# wheel: add olympus py_import target in the test dependencies.
export OLYMPUSCI_BUILD_OLYMPUS=${OLYMPUSCI_BUILD_OLYMPUS:-true}

# Controls the output base for Bazel builds.
export OLYMPUSCI_BAZEL_OUTPUT_BASE=${OLYMPUSCI_BAZEL_OUTPUT_BASE:-}

# Controls whether to build or run CPU test targets.
export OLYMPUSCI_BAZEL_CPU_RBE_MODE=${OLYMPUSCI_BAZEL_CPU_RBE_MODE:-"test"}